# Backend Environment Variables
# Copy this file to .env and fill in your values

# Database / Iceberg Catalog Configuration
# Choose catalog type: "hadoop" (cheapest, file-based), "jdbc" (direct DB), "rest" (Nessie), "hive"
ICEBERG_CATALOG_TYPE=hadoop

# Option 1: HadoopCatalog (RECOMMENDED - $0 cost, uses blob storage directly)
# Format: abfss://container@storageaccount.dfs.core.windows.net/path
# Or: wasbs://container@storageaccount.blob.core.windows.net/path
DATABASE_URL=abfss://documents@investflowstorage.dfs.core.windows.net/iceberg-warehouse

# Option 2: JdbcCatalog (uses PostgreSQL container - already running)
# DATABASE_URL=jdbc:postgresql://investflow-postgres.internal.yellowsky-ca466dfe.eastus.azurecontainerapps.io:5432/nessie

# Option 3: REST Catalog (Nessie) - requires ICEBERG_CATALOG_URI
# ICEBERG_CATALOG_URI=https://investflow-nessie.internal.yellowsky-ca466dfe.eastus.azurecontainerapps.io/api/v2
# DATABASE_URL=abfss://documents@investflowstorage.dfs.core.windows.net/iceberg-warehouse

# Azure Storage
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...
AZURE_STORAGE_CONTAINER_NAME=documents

# Authentication
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Environment
ENVIRONMENT=development

# Application Insights (optional)
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=...

